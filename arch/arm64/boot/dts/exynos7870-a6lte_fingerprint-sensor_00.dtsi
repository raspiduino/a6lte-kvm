/ {
	pinctrl@139F0000 {
		btp_irq: btp-irq {
			samsung,pins = "gpa2-4";
			samsung,pin-function = <0xf>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <3>;
		};
		btp_irq_sleep: btp-irq-sleep {
			samsung,pins = "gpa2-4";
			samsung,pin-function = <0x0>;
			samsung,pin-pud = <1>;
			samsung,pin-drv = <3>;
		};
	};
	pinctrl@139B0000 {
		btp_ldo: btp-ldo {
			samsung,pins = "gpd4-5";
			samsung,pin-function = <1>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};
		btp_reset: btp-reset {
			samsung,pins = "gpd4-6";
			samsung,pin-function = <1>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <3>;
		};
	};

	spi_1: spi@100C0000 {
		status = "okay";
		secure-mode;
		#address-cells = <1>;
		#size-cells = <0>;
		/delete-property/ pinctrl-names;
		/delete-property/ pinctrl-0;

		dma-mode;
		dmas = <&pdma0 19
			&pdma0 18>;

		dma-names = "tx", "rx";
		etspi-spi@0 {
			compatible = "etspi,et5xx";
			reg = <0>;
			spi-max-frequency = <16000000>;
			pinctrl-names = "default", "pins_poweron", "pins_poweroff"
				, "pins_poweron_tz", "pins_poweroff_tz";
			pinctrl-0 = <&btp_irq_sleep &btp_reset &btp_ldo>;
			pinctrl-1 = <&btp_irq &spi1_clk &spi1_cs &spi1_miso &spi1_mosi>;
			pinctrl-2 = <&btp_irq_sleep &spi1_bus_inactive &spi1_miso_inactive>;
			pinctrl-3 = <&btp_irq>;
			pinctrl-4 = <&btp_irq_sleep>;

			gpio-controller;
			#gpio-cells = <2>;

			etspi-sleepPin = <&gpd4 6 0x00>;
			etspi-drdyPin = <&gpa2 4 0x00>;
			etspi-ldoPin = <&gpd4 5 0x00>;
			etspi-chipid = "ET516";
			etspi-orient = <1>;
			etspi-ldocontrol = <1>;
			controller-data {
				samsung,spi-feedback-delay = <0>;
				samsung,spi-chip-select-mode = <0>;
			};
		};
	};
};
